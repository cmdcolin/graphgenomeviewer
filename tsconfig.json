{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es2018",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": ["**/build/", "**/dist/"]
}
